---
import BaseLayout from '../../layouts/BaseLayout.astro';
import LayoutPage from '../../layouts/LayoutPage.astro';
const pageTitle = "KOTEKBOT";
---

<style>
	.main {
		padding: 20px;
		width: 100%;
		height: 100%;
	}
	.left-side {
		float: left;
		height: 100%;
		width: 25%;
	}
	.right-side {
		float: right;
		height: 100%;
		width: 75%;
	}
	.avatar {
		width: 100%;
		border-radius: 360px ;
		border: thick double rgb(105, 105, 105);
	}
	.description, h4, h3 {
		font-family: sans-serif;
	}
	.btn {
		background-color: hsl(0, 0%, 20%);
		padding: 10px 100px;
	}
	
</style>


<BaseLayout pageTitle={pageTitle}>
	<LayoutPage>
		<div class="main">
			<div class="left-side">
				<div class="w-full left-side-element">
					<img class="avatar" src="/KOTEKBOT.jpg" alt="kotekbot photo">
				</div>
				<div class="w-full left-side-element pt-4">
					<span class="title">
						<h3>{pageTitle}</h3>
						<h4>more information</h4>
					</span>
					<div class="description pt-4">
						A most small description of a project which you can see to project and more paceful a word page layout
					</div>
					<div class="button pt-4">
						<a class="btn" href="https://github.com/salko-ua/KOTEKBOT">source code</a>
					</div>
				</div>
			</div>
			<div class="right-side">
				right side
			</div>
		</div>
	</LayoutPage>
</BaseLayout>